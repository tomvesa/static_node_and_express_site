extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects

    if !foundProject
      .inner-wrapper.flex-row-wrap.two-col
        .project-info-box.box
          h1= `No such project found - project id "${id}"`        
    else
      .inner-wrapper.flex-row-wrap.two-col

        .project-info-box.box
          h1= foundProject.project_name
          p= foundProject.description

        .project-tech-links-box.box
          h6 Technologies
          ul
            each val in foundProject.technologies
              li= val

          a.btn-link(href=`${foundProject.live_link}`, target="_blank") Live Demo
          a.btn-link(href=`${foundProject.github_link}`, target="_blank") GitHub Repo

      .project-img-box.box
        each img in foundProject.image_urls.large
          img.project-img(src=`../img/portfolio/${img}`, alt=`Screenshot of project: ${project_name}`)
      


  nav.nav
    a(href='/')
      span &larr;
      |  Back
